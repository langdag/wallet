<div class="button-fit">
  <h1 class="margin-h1">Teams</h1>
  <p class="line"></p>
  <div class="button button-table"><%= link_to 'New', new_team_path, class: "btn btn-outline-primary"%></div>
  <div class="button button-table"><%= link_to 'Back', root_path, class: "btn btn-outline-primary"%></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Tagline</th>
      <th scope="col">TeamSize</th>
      <th scope="col">Wallet Number</th>
      <th scope="col">Wallet Balance</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each_with_index do |team, idx| %>
    <tr>
      <th scope="row"><%= idx + 1 %></th>
      <td><%= team.name %></td>
      <td><%= team.tagline %></td>
      <td><%= team.team_size %></td>
      <td><%= team.wallet_account.account_number %></td>
      <td><%= team.wallet_account.balance %></td>
      <td>
          <div class="button button-table"><%= link_to 'Show', team, class: "btn btn-outline-primary"%></div>  
          <div class="button button-table"><%= link_to 'Edit', edit_team_path(team), class: "btn btn-outline-primary"%></div>
          <div class="button button-table"><%= link_to 'Wallet', wallet_path(team.wallet_account), class: "btn btn-outline-primary"%></div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
